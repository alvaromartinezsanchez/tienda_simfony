{% extends 'base.html.twig' %}

{% block title %}Login{% endblock %}

{% block body %}

<div class="container register_form">
    <div class="row justify-content-center">
        <h1 class="col-2">Login</h1>
    </div>

    {% if error %}
        <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}
    
    <form action="{{ path('login') }}" method="POST">
    <div class="row">
        <label for="username" class="col-2 align-self-center justify-content-center">Email</label>
        <input type="email" id="username" name="_username" value="{{ last_username }}" class="col-6">
    </div>
        
    <div class="row">
        <label for="password" class="col-2 align-self-center">Contrase√±a</label>
        <input type="password" id="password" name="_password" value="" class="col-6">
    </div>
        <input type="submit" value="Entrar">
    </form>
</div>

{% endblock %}
