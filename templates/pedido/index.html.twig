{% extends 'base.html.twig' %}

{% block title %}Hello PedidoController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    
        
        {% if pedido %}
            Id:{{ pedido.id }}| Nombre:{{ pedido.usuario.nombre }}| Apellidos:{{ pedido.usuario.apellidos }} | Provincia:{{ pedido.provincia }}| Localidad:{{ pedido.localidad }}| Direccion:{{ pedido.direccion }}
            | Coste:{{ pedido.coste }} | Estado:{{ pedido.estado }} | Fecha:{{ pedido.fecha | date('Y-m-d') }}| Hora:{{ pedido.hora | date('H:m:s') }}
            | Lineas Pedido:
            {% for lineaPedido in pedido.lineasPedido %}
                ID:{{ lineaPedido.id }}| Pedido ID:{{ lineaPedido.pedido.id }}| Producto: {{ lineaPedido.producto.nombre }}| Unidades: {{ lineaPedido.unidades }}
            {% endfor %}
        {% endif %}
    
</div>
{% endblock %}
